@model Formularz.Models.Dane

<form asp-action="Form" method="post">
    <div asp-validation-summary="All"></div>

    <div>
        <label for="Imie">Twoje Imię (wymagane, minimum 2 znaki)</label>
        <input type="text" id="Imie" name="Imie" required minlength="2" />
        <span asp-validation-for="Imie" class="text-danger"></span>
    </div>

    <div>
        <label for="Nazwisko">Nazwisko (wymagane, minimum 2 znaki)</label>
        <input type="text" id="Nazwisko" name="Nazwisko" required minlength="2" />
        <span asp-validation-for="Nazwisko" class="text-danger"></span>
    </div>

    <div>
        <label for="Email">Adres e-mail (wymagany, poprawny adres e-mail)</label>
        <input type="email" id="Email" name="Email" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div>
        <label for="Haslo">Hasło (wymagane, minimum 8 znaków, co najmniej jedna cyfra, jedna duża litera i jedna mała litera)</label>
        <input type="password" id="Haslo" name="Haslo" required minlength="8"
               pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d).+$" />
        <span asp-validation-for="Haslo" class="text-danger"></span>
    </div>

    <div>
        <label for="PotwierdzenieHasla">Potwierdzenie hasła (wymagane, musi być takie samo jak pole hasło)</label>
        <input type="password" id="PotwierdzenieHasla" name="PotwierdzenieHasla" required />
        <span asp-validation-for="PotwierdzenieHasla" class="text-danger"></span>
    </div>

    <div>
        <label for="NrTelefonu">Nr telefonu</label>
        <input type="tel" id="NrTelefonu" name="NrTelefonu" pattern="^\+?[0-9]*$" />
        <span asp-validation-for="NrTelefonu" class="text-danger"></span>
    </div>

    <div>
        <label for="Wiek">Wiek (powyżej 10 lat do 80 lat)</label>
        <input type="number" id="Wiek" name="Wiek" min="10" max="80" required />
        <span asp-validation-for="Wiek" class="text-danger"></span>
    </div>

    <div>
        <label for="Miasto">Miasto (wybór z 5 propozycji)</label>
        <select id="Miasto" name="Miasto" required>
            <option value="">Wybierz miasto</option>
            <option value="Warszawa">Warszawa</option>
            <option value="Kraków">Kraków</option>
            <option value="Łódź">Łódź</option>
            <option value="Wrocław">Wrocław</option>
            <option value="Poznań">Poznań</option>
        </select>
        <span asp-validation-for="Miasto" class="text-danger"></span>
    </div>

    <div>
        <input type="submit" value="Wyślij" />
        <input type="reset" value="Wyczyść" /> 
    </div>
</form>
